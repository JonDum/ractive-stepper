
.ractive-stepper
    display inline-block

    *
        vertical-align middle

    input
        padding 0.3em
        text-align right
        color inherit

    .steppers
        display inline-block

    .up, .down
        border 0.25em solid transparent
        cursor pointer

    .up
        border-bottom-color currentColor
        margin-bottom 0.5em
    .down
        border-top-color currentColor

